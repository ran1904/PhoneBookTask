@model CardcomApp.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<hr />
<div class="container">

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group row mb-3">
            <label asp-for="IdNum" class="fw-bold col-sm-3 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="IdNum" class="form-control" />
                <span asp-validation-for="IdNum" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Name" class="fw-bold col-sm-3 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Email" class="fw-bold col-sm-3 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="DateOfBirth" class="fw-bold col-sm-3 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="Gender" class="fw-bold col-sm-3 col-form-label"></label>
            <div class="col-sm-3">
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                    <option value="" selected></option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label asp-for="PhoneNumber" class="fw-bold col-sm-3 col-form-label"></label>
            <div class="col-sm-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="container mt-3 offset-sm-2">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-danger">Cancel</a>

        </div>
    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
